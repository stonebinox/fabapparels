{% extends "layout.html" %}
{% block content %}
<body ng-app="fab">
    <div class="container" ng-controller="login">
        <br>
        <br>
        <img src="images/fab_logo.JPG" class="img-responsive" style="width:200px;margin:0 auto;">
        <hr>
        <form method="post" action="login" name="login">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter a valid email ID">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter a valid password">
            </div>
            <button type="button" class="btn btn-primary">Login</button>
        </form>
    </div>
    <div class="container-fluid">
        <div id="myModal" class="modal fade" role="dialog"></div>
    </div>
</body>
{% endblock %}